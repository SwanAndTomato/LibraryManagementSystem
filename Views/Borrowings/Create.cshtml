@model LibraryManagementSystem.Models.BorrowingModel

@{
    ViewData["Title"] = "Create Borrowing";
}

<h2>Create Borrowing</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="BookTitle" class="control-label"></label>
        <select asp-for="BookTitle" class="form-control" asp-items="@(new SelectList(Model.Books, "Id", "Title"))"></select>
        <span asp-validation-for="BookTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReaderName" class="control-label"></label>
        <select asp-for="ReaderName" class="form-control" asp-items="@(new SelectList(Model.Readers, "Id", "Name"))"></select>
        <span asp-validation-for="ReaderName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BorrowDate" class="control-label"></label>
        <input asp-for="BorrowDate" class="form-control" />
        <span asp-validation-for="BorrowDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReturnDate" class="control-label"></label>
        <input asp-for="ReturnDate" class="form-control" />
        <span asp-validation-for="ReturnDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
