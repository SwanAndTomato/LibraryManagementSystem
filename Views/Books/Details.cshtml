@model LibraryManagementSystem.Models.BookModel

@{
    ViewData["Title"] = "Book Details";
}

<h2>Book Details</h2>

<div>
    <h4>Title: @Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Author</dd>
        <dt class="col-sm-2">ISBN</dt>
        <dd class="col-sm-10">@Model.ISBN</dd>
        <dt class="col-sm-2">Publication Date</dt>
        <dd class="col-sm-10">@Model.PublicationDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Genre</dt>
        <dd class="col-sm-10">@Model.Genre</dd>
        <dt class="col-sm-2">Total Pages</dt>
        <dd class="col-sm-10">@Model.TotalPages</dd>
        <dt class="col-sm-2">Available Copies</dt>
        <dd class="col-sm-10">@Model.AvailableCopies</dd>
        <dt class="col-sm-2">Is Available</dt>
        <dd class="col-sm-10">@Model.IsAvailable</dd>
        <!-- Additional properties -->
        <dt class="col-sm-2">Publisher</dt>
        <dd class="col-sm-10">@Model.Publisher</dd>
        <dt class="col-sm-2">Published Date</dt>
        <dd class="col-sm-10">@Model.PublishedDate.ToShortDateString()</dd>
    </dl>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
